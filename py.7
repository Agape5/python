
import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns
from sklearn.datasets import load_iris


try:
    iris = load_iris()
    df = pd.DataFrame(data=iris.data, columns=iris.feature_names)
    df['species'] = pd.Categorical.from_codes(iris.target, iris.target_names)
    df['day'] = range(1, len(df) + 1)  # Simulated time-series index
except Exception as e:
    print(f"Error loading dataset: {e}")
    exit()

print("First 5 rows of the dataset:")
print(df.head())

print("\nData types:")
print(df.dtypes)
print("\nMissing values:")
print(df.isnull().sum())

df.fillna(df.mean(numeric_only=True), inplace=True)

print("\nDescriptive statistics:")
print(df.describe())

grouped = df.groupby('species').mean()
print("\nMean values grouped by species:")
print(grouped)

sns.set(style="whitegrid")

plt.figure(figsize=(10, 5))
sns.lineplot(x='day', y='sepal length (cm)', data=df)
plt.title('Sepal Length Over Time')
plt.xlabel('Day')
plt.ylabel('Sepal Length (cm)')
plt.show()

plt.figure(figsize=(8, 5))
sns.barplot(x=grouped.index, y=grouped['petal length (cm)'])
plt.title('Average Petal Length by Species')
plt.xlabel('Species')
plt.ylabel('Petal Length (cm)')
plt.show()

plt.figure(figsize=(8, 5))
sns.histplot(df['sepal width (cm)'], bins=20, kde=True)
plt.title('Distribution of Sepal Width')
plt.xlabel('Sepal Width (cm)')
plt.ylabel('Frequency')
plt.show()

plt.figure(figsize=(8, 5))
sns.scatterplot(x='sepal length (cm)', y='petal length (cm)', hue='species', data=df)
plt.title('Sepal Length vs Petal Length')
plt.xlabel('Sepal Length (cm)')
plt.ylabel('Petal Length (cm)')
plt.legend(title='Species')
plt.show()